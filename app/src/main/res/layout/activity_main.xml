<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:background="@android:color/white"
            android:textSize="34sp"
            android:text="Quiz" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/question_one_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="Q 1" />

            <TextView
                android:id="@+id/question_one_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="A programmer is to a computer as a teacher is to" />

            <RadioGroup
                android:id="@+id/question_one_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/question_one_radio_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A desk" />

                <RadioButton
                    android:id="@+id/question_one_radio_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A student" />

                <RadioButton
                    android:id="@+id/question_one_radio_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A library" />

                <RadioButton
                    android:id="@+id/question_one_radio_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A principal" />

            </RadioGroup>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/question_two_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="Q 2" />

            <TextView
                android:id="@+id/question_two_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="What is FIFO" />

            <EditText
                android:id="@+id/question_two_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/question_three_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="Q 3" />

            <TextView
                android:id="@+id/question_three_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Select the functional programming language" />

            <CheckBox
                android:id="@+id/question_three_check_box_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lisp" />

            <CheckBox
                android:id="@+id/question_three_check_box_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Erlang" />

            <CheckBox
                android:id="@+id/question_three_check_box_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Haskell" />

            <CheckBox
                android:id="@+id/question_three_check_box_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Java" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/question_four_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="Q 4" />

            <TextView
                android:id="@+id/question_four_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Entering Comments is a useless task, it will  not help in anyway." />

            <RadioGroup
                android:id="@+id/question_four_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/question_four_radio_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="True" />

                <RadioButton
                    android:id="@+id/question_four_radio_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="False"/>

            </RadioGroup>



        </LinearLayout>

        <Button
            android:id="@+id/submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:text="Submit" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>